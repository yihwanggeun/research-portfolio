---
interface Props {
  href: string;
  title: string;
  date: Date;
  description: string;
  meta?: string;
}

const { href, title, date, description, meta } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('ko-KR', {
  year: 'numeric',
  month: '2-digit',
  day: '2-digit',
});
---

<a href={href} class="card">
  <h3>{title}</h3>
  <div class="meta">
    {formattedDate}
    {meta && ` | ${meta}`}
  </div>
  <p>{description}</p>
</a>
