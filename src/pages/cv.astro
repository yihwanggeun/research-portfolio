---
import MainLayout from "@/layouts/MainLayout.astro";
import CVEntry from "@/components/CVEntry.astro";
import { education, workExperience, projectExperience } from "@/data/cv";
---

<MainLayout title="CV">
  <div class="cv-container fade-in">
    <div class="page-header">
      <h1>Curriculum Vitae</h1>
      <a
        href="/research-portfolio/assets/cv.pdf"
        target="_blank"
        download
        class="btn download-btn"
      >
        Download PDF
      </a>
    </div>

    <div class="cv-intro">
      <p>
        Welcome to my academic and professional profile. Below is a
        comprehensive overview of my educational background, research
        experience, and professional achievements.
      </p>
    </div>

    <div class="cv-section">
      <h2>Education</h2>
      {education.map((entry) => <CVEntry entry={entry} />)}
    </div>

    <div class="cv-section">
      <h2>Work & Leadership Experience</h2>
      {workExperience.map((entry) => <CVEntry entry={entry} />)}
    </div>

    {
      projectExperience.length > 0 && (
        <div class="cv-section">
          <h2>Project Experience</h2>
          {projectExperience.map((entry) => (
            <CVEntry entry={entry} />
          ))}
        </div>
      )
    }
  </div>
</MainLayout>

<style>
  .cv-container {
    max-width: 1000px; /* Increased width */
    margin: 0 auto;
    width: 100%;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    border-bottom: 2px solid var(--color-text-primary); /* Stronger border */
    padding-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }
  }

  .page-header h1 {
    margin: 0;
    font-size: 2.5rem;
  }

  .cv-intro {
    font-size: 1.1rem;
    margin-bottom: 3rem;
    color: var(--color-text-secondary);
  }

  .cv-section {
    margin-bottom: 4rem;
  }

  .cv-section h2 {
    font-size: 1.5rem;
    color: var(--color-text-primary);
    margin-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: var(--font-sans);
    font-weight: 700;
  }
</style>
```
