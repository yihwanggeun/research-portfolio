---
import MainLayout from "../layouts/MainLayout.astro";
import { aboutData } from "@/data/about";
---

<MainLayout title="소개">
  <div class="about-container fade-in">
    <div class="about-header">
      <h1>{aboutData.title}</h1>
      <p class="intro-text">{aboutData.intro}</p>
    </div>

    <div class="about-content">
      {aboutData.paragraphs.map((paragraph) => <p set:html={paragraph} />)}
    </div>
  </div>
</MainLayout>

<style>
  .about-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .about-header {
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 2rem;
  }

  .intro-text {
    font-size: 1.25rem;
    color: var(--color-text-primary);
    line-height: 1.6;
    margin-top: 1rem;
    font-weight: 500;
  }

  .about-content p {
    margin-bottom: 1.5rem;
    text-align: justify;
  }
</style>
