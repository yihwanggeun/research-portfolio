---
import MainLayout from "./MainLayout.astro";
import PDFGridCard from "@/components/PDFGridCard.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  entry: CollectionEntry<"personal-projects"> | CollectionEntry<"studies">;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const frontmatter = entry.data;

// 날짜 포맷 함수
const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString("ko-KR", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<MainLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="prose">
    <h3>{frontmatter.title}</h3>
    <div class="post-meta">
      {
        "date" in frontmatter && (
          <span>
            작성일:{" "}
            <time datetime={frontmatter.date.toISOString()}>
              {formatDate(frontmatter.date)}
            </time>
          </span>
        )
      }
      {
        "publishDate" in frontmatter && (
          <span>
            작성일:{" "}
            <time datetime={frontmatter.publishDate.toISOString()}>
              {formatDate(frontmatter.publishDate)}
            </time>
          </span>
        )
      }
    </div>

    {/* PDF Viewer Section */}
    {
      // Check if 'pdf' field exists (dynamically cast frontmatter to any to bypass strict type if needed, or update interface)
      (frontmatter as any).pdf && (
        <div class="pdf-viewer-container">
          <PDFGridCard
            title={frontmatter.title}
            pdfUrl={(frontmatter as any).pdf}
            href="#"
          />
        </div>
      )
    }

    <Content />
  </article>
</MainLayout>

<style>
  .pdf-viewer-container {
    margin: 2rem 0;
    max-width: 100%;
  }
</style>
